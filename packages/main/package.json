{
  "name": "highlight.svelte",
  "version": "0.0.2",
  "description": "Svelte language definition for highlight.js",
  "author": "moonlitgrace",
  "license": "MIT",
  "homepage": "https://github.com/moonlitgrace/highlight.svelte#readme",
  "bugs": {
    "url": "https://github.com/moonlitgrace/highlight.svelte/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonlitgrace/highlight.svelte.git",
    "directory": "packages/main"
  },
  "scripts": {
    "build": "tsup"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.global.js",
  "unpkg": "./dist/index.global.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "keywords": [
    "highlight.js",
    "svelte",
    "hljs"
  ],
  "devDependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/node": "^22.8.2",
    "highlight.js": "^11.10.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  }
}
